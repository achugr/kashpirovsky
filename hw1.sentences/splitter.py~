
def split_sentences(text):
    return text.split("\[.?!\] ")

with open("corpus/habr.sample.txt") as text:
    collector = ""
    for line in text:
        collector += line
    collector = collector.replace("*", "#")
    collector = collector.replace("\n", "*").replace("****", "*").replace("***", "*").replace("**", "*")
    print collector
    paragraphs = collector.split("*")
    for p in paragraphs:
        print "------------------------------------------------"
        for s in split_sentences(p):
            print ">>", s
